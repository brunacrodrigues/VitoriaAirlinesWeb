@model VitoriaAirlinesWeb.Models.Airport.AirportViewModel

@{
    ViewData["Title"] = "Edit Airport";
}

<div class="login-background">
    <div class="login-card" style="max-width: 500px;">
        <h3 class="text-center text-light mb-4">Edit Airport</h3>

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="ModelOnly" class="login-error-message"></div>

            <div class="mb-3">
                <label asp-for="IATA" class="form-label text-light"></label>
                <input asp-for="IATA" class="form-control bg-dark text-light border-secondary" />
                <span asp-validation-for="IATA" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label text-light"></label>
                <input asp-for="Name" type="text"
                       class="form-control bg-dark text-light border-secondary" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CountryId" class="form-label text-light"></label>
                <select asp-for="CountryId" asp-items="Model.Countries"
                        class="form-select bg-dark text-light border-secondary">
                </select>
                <span asp-validation-for="CountryId" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="City" class="form-label text-light"></label>
                <input asp-for="City" type="text"
                       class="form-control bg-dark text-light border-secondary" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>

            <button type="submit" class="btn w-100 login-button">Save Changes</button>
            <div class="mt-3 text-center">
                <a asp-action="Index" class="btn btn-outline-light">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
