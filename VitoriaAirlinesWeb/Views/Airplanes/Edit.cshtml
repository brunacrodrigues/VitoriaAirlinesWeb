@model VitoriaAirlinesWeb.Models.Airplanes.AirplaneViewModel
@using VitoriaAirlinesWeb.Data.Enums

@{
    ViewData["Title"] = "Edit Airplane";
}

<div class="login-background">
    <div class="login-card" style="max-width: 500px;">
        <h3 class="text-center text-light mb-4">Edit Airplane</h3>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success fade-out-alert">
                @TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger fade-out-alert">
                @TempData["ErrorMessage"]
            </div>
        }
        @if (TempData["InfoMessage"] != null)
        {
            <div class="alert alert-info fade-out-alert">
                @TempData["InfoMessage"]
            </div>
        }

        @if (ViewBag.LockCapacity == true)
        {
            <div class="alert alert-warning mb-3">
                Some fields are read-only because this airplane has flights associated.
            </div>
        }

        @if (ViewBag.LockStatus == true)
        {
            <div class="alert alert-warning mb-3">
                The status field is disabled because this airplane has future flights scheduled.
            </div>
        }

        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageId" />

            <div asp-validation-summary="ModelOnly" class="login-error-message"></div>

            <div class="mb-4 text-center">
                <label class="form-label text-light">Current Image</label>
                <div>
                    <img id="imagePreview" src="https://brunablob.blob.core.windows.net/images/@Model.ImageId"
                         alt="Airplane Image"
                         class="rounded"
                         style="width: 100%; max-width: 300px; object-fit: contain; border: 3px solid #444;" />
                </div>
                <div class="mt-3">
                    <input asp-for="ImageFile" type="file" accept=".jpg,.jpeg,.png"
                           class="form-control bg-dark text-light border-secondary" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Model" class="form-label text-light"></label>
                <input asp-for="Model" class="form-control bg-dark text-light border-secondary" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="TotalExecutiveSeats" class="form-label text-light"></label>
                <input asp-for="TotalExecutiveSeats" type="number" min="0"
                       class="form-control bg-dark text-light border-secondary"
                       readonly="@(ViewBag.LockCapacity as bool? == true ? "readonly" : null)" />
                <span asp-validation-for="TotalExecutiveSeats" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="TotalEconomySeats" class="form-label text-light"></label>
                <input asp-for="TotalEconomySeats" type="number" min="1"
                       class="form-control bg-dark text-light border-secondary"
                       readonly="@(ViewBag.LockCapacity as bool? == true ? "readonly" : null)" />
                <span asp-validation-for="TotalEconomySeats" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Status" class="form-label text-light"></label>
                <select asp-for="Status" asp-items="Html.GetEnumSelectList<AirplaneStatus>()"
                        class="form-select bg-dark text-light border-secondary"
                        disabled="@(ViewBag.LockStatus as bool? == true ? "disabled" : null)">
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <button type="submit" class="btn w-100 login-button">Save Changes</button>
            <div class="mt-3 text-center">
                <a asp-action="Index" class="btn btn-outline-light">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const imageInput = document.getElementById("ImageFile");
            const imagePreview = document.getElementById("imagePreview");

            if (imageInput && imagePreview) {
                imageInput.addEventListener("change", function () {
                    const file = this.files[0];
                    if (file) {
                        const reader = new FileReader();
                        reader.onload = function (e) {
                            imagePreview.src = e.target.result;
                        };
                        reader.readAsDataURL(file);
                    }
                });
            }

             setTimeout(function () {
                const alerts = document.querySelectorAll('.alert');
                alerts.forEach(alert => {
                    alert.style.transition = "opacity 0.5s ease-out";
                    alert.style.opacity = '0';
                    setTimeout(() => alert.remove(), 500);
                });
            }, 8000);
        });
    </script>
}
