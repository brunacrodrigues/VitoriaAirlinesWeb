@using VitoriaAirlinesWeb.Models.ViewModels.Airplanes
@model AirplaneViewModel

@{
    ViewData["Title"] = "Register Airplane";
}

<div class="login-background">
    <div class="login-card" style="max-width: 500px;">

        <h3 class="text-center text-light mb-4">Register New Airplane</h3>

        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="login-error-message"></div>

            <div class="mb-4 text-center">
                <label asp-for="ImageFile" class="form-label text-light">Airplane Image</label>
                <div>
                    <img id="imagePreview" src="https://brunablob.blob.core.windows.net/images/noimage.png"
                         alt="Preview"
                         class="rounded"
                         style="width: 100%; max-width: 200px; max-height: 200px; object-fit: contain; border: 3px solid #444;" />
                </div>
                <div class="mt-3">
                    <input asp-for="ImageFile" type="file" accept=".jpg,.jpeg,.png"
                           class="form-control bg-dark text-light border-secondary" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Model" class="form-label text-light"></label>
                <input asp-for="Model" class="form-control bg-dark text-light border-secondary" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="TotalExecutiveSeats" class="form-label text-light"></label>
                <input asp-for="TotalExecutiveSeats" type="number" min="0"
                       class="form-control bg-dark text-light border-secondary" />
                <span asp-validation-for="TotalExecutiveSeats" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="TotalEconomySeats" class="form-label text-light"></label>
                <input asp-for="TotalEconomySeats" type="number" min="1"
                       class="form-control bg-dark text-light border-secondary" />
                <span asp-validation-for="TotalEconomySeats" class="text-danger"></span>
            </div>

            <button type="submit" class="btn w-100 login-button">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const imageInput = document.getElementById("ImageFile");
            const imagePreview = document.getElementById("imagePreview");

            if (imageInput && imagePreview) {
                imageInput.addEventListener("change", function () {
                    const file = this.files[0];
                    if (file) {
                        const reader = new FileReader();
                        reader.onload = function (e) {
                            imagePreview.src = e.target.result;
                        };
                        reader.readAsDataURL(file);
                    }
                });
            }
        });
    </script>
}
