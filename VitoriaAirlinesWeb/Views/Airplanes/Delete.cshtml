@model VitoriaAirlinesWeb.Data.Entities.Airplane

@{
    ViewData["Title"] = "Delete Airplane Model";
    var canOnlyInactivate = ViewBag.CanOnlyInactivate as bool? ?? false;
}

<div class="main-content">
    <h2 class="text-danger">Delete Confirmation</h2>

    <div class="card p-4 bg-dark text-light">
        @if (canOnlyInactivate)
        {
            <div class="alert alert-warning">
                This airplane has been used in past flights and cannot be deleted.<br />
                It will be marked as <strong>Inactive</strong> instead.
            </div>
        }
        else
        {
            <p>Are you sure you want to delete this airplane model?</p>
        }

        <dl class="row">
            <dt class="col-sm-3">Model</dt>
            <dd class="col-sm-9">@Model.Model</dd>

            <dt class="col-sm-3">Executive Seats</dt>
            <dd class="col-sm-9">@Model.TotalExecutiveSeats</dd>

            <dt class="col-sm-3">Economy Seats</dt>
            <dd class="col-sm-9">@Model.TotalEconomySeats</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn @(canOnlyInactivate ? "btn-warning" : "btn-danger")">
                @(canOnlyInactivate ? "Mark as Inactive" : "Delete")
            </button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
