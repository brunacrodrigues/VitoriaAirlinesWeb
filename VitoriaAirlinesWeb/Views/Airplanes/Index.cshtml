@model IEnumerable<VitoriaAirlinesWeb.Data.Entities.Airplane>

@using VitoriaAirlinesWeb.Data.Enums

@{
    ViewData["Title"] = "Manage Airplane Models";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success fade-out-alert">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger fade-out-alert">
        @TempData["ErrorMessage"]
    </div>
}

@if (TempData["InfoMessage"] != null)
{
    <div class="alert alert-info fade-out-alert">
        @TempData["InfoMessage"]
    </div>
}

<div class="main-content">
    <h2>Registered Models</h2>

    <a asp-action="Create" class="btn btn-gold mb-3">Register New Airplane</a>

    <table class="table table-striped table-custom">
        <thead>
            <tr>
                <th>Model</th>
                <th>Executive Seats</th>
                <th>Economic Seats</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var airplane in Model)
            {
                <tr>
                    <td>
                        <img src="@airplane.ImageFullPath" alt="@airplane.Model" width="80" class="me-2" />
                        @airplane.Model
                    </td>
                    <td>@airplane.TotalExecutiveSeats</td>
                    <td>@airplane.TotalEconomySeats</td>
                    <td>
                        @switch (airplane.Status)
                        {
                            case AirplaneStatus.Active:
                                <span class="badge bg-success">Active</span>
                                break;
                            case AirplaneStatus.Inactive:
                                <span class="badge bg-secondary">Inactive</span>
                                break;
                            case AirplaneStatus.Maintenance:
                                <span class="badge bg-warning text-dark">Maintenance</span>
                                break;
                        }
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@airplane.Id" class="btn btn-sm btn-outline-info">Details</a>
                        <a asp-action="Edit" asp-route-id="@airplane.Id" class="btn btn-sm btn-outline-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@airplane.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        setTimeout(function () {
            const alerts = document.querySelectorAll('.fade-out-alert');
            alerts.forEach(alert => {
                alert.style.transition = "opacity 0.5s ease-out";
                alert.style.opacity = '0';
                setTimeout(() => alert.remove(), 500);
            });
        }, 4000);
    </script>

    @await Html.PartialAsync("_ValidationScriptsPartial")
}
