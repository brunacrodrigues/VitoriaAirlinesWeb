@using VitoriaAirlinesWeb.Models.ViewModels.Customers
@model CustomerProfileAdminViewModel

@{
    ViewData["Title"] = "Edit Customer Profile";
}

<div class="login-background">
    <div class="login-card" style="max-width: 500px;">
        <h3 class="text-center text-light mb-4">Edit Customer Profile</h3>

        <form asp-action="EditCustomerProfile" method="post">
            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="ModelOnly" class="login-error-message"></div>

            <div class="mb-3">
                <label class="form-label text-light">Full Name</label>
                <input class="form-control bg-dark text-light border-secondary" value="@Model.FullName" disabled />
            </div>

            <div class="mb-3">
                <label class="form-label text-light">Email</label>
                <input class="form-control bg-dark text-light border-secondary" value="@Model.Email" disabled />
            </div>

            <div class="mb-3">
                <label asp-for="CountryId" class="form-label text-light"></label>
                <select asp-for="CountryId" asp-items="Model.Countries" class="form-select bg-dark text-light border-secondary"></select>
                <span asp-validation-for="CountryId" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="PassportNumber" class="form-label text-light"></label>
                <input asp-for="PassportNumber" class="form-control bg-dark text-light border-secondary" />
                <span asp-validation-for="PassportNumber" class="text-danger"></span>
            </div>

            <button type="submit" class="btn w-100 login-button">Save Changes</button>
            <div class="mt-3 text-center">
                <a asp-action="Index" class="btn btn-outline-light">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
