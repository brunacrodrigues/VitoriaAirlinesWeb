@model VitoriaAirlinesWeb.Models.Customer.CustomerProfileAdminViewModel

@{
    ViewData["Title"] = "Edit Customer Profile";
}

<div class="main-content">
    <h2>Edit Customer Profile</h2>

    <div class="card p-4 bg-dark text-light">
        <form asp-action="EditCustomerProfile" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label class="form-label">Full Name</label>
                <input class="form-control" value="@Model.FullName" disabled />
            </div>

            <div class="mb-3">
                <label class="form-label">Email</label>
                <input class="form-control" value="@Model.Email" disabled />
            </div>

            <div class="mb-3">
                <label asp-for="CountryId" class="form-label"></label>
                <select asp-for="CountryId" asp-items="Model.Countries" class="form-select"></select>
                <span asp-validation-for="CountryId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PassportNumber" class="form-label"></label>
                <input asp-for="PassportNumber" class="form-control" />
                <span asp-validation-for="PassportNumber" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
