@model IEnumerable<VitoriaAirlinesWeb.Data.Entities.CustomerProfile>

@{
    ViewData["Title"] = "Manage Customers";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success fade-out-alert">
        @TempData["SuccessMessage"]
    </div>
}

<div class="main-content">
    <h2>Registered Customers</h2>

    <table class="table table-striped table-custom">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Email</th>
                <th>Nationality</th>
                <th>Passport Number</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.User.FullName</td>
                    <td>@customer.User.Email</td>
                    <td>
                        @if (customer.Country != null)
                        {
                            <img src="@customer.Country.FlagImageUrl" alt="@customer.Country.CountryCode" width="30" class="me-2" />
                            @customer.Country.Name
                        }
                        else
                        {
                            <span>—</span>
                        }
                    </td>
                    <td>@(customer.PassportNumber ?? "—")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@customer.Id" class="btn btn-sm btn-outline-info">Details</a>
                        <a asp-action="EditCustomerProfile" asp-route-id="@customer.Id" class="btn btn-sm btn-outline-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@customer.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        setTimeout(function () {
            const alerts = document.querySelectorAll('.fade-out-alert');
            alerts.forEach(alert => {
                alert.style.transition = "opacity 0.5s ease-out";
                alert.style.opacity = '0';
                setTimeout(() => alert.remove(), 500);
            });
        }, 4000);
    </script>

    @await Html.PartialAsync("_ValidationScriptsPartial")
}
