@model VitoriaAirlinesWeb.Models.Customers.CustomerProfileViewModel

@{
    ViewData["Title"] = "Edit Traveller Profile";
}

<div class="login-background">
    <div class="login-card" style="max-width: 500px;">
        <h3 class="text-center text-light mb-4">Edit Your Profile</h3>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        <form asp-action="EditTravellerProfile" method="post">
            <div asp-validation-summary="ModelOnly" class="login-error-message"></div>

            <div class="mb-3">
                <label asp-for="CountryId" class="form-label text-light">Nationality</label>
                <select asp-for="CountryId" asp-items="Model.Countries" class="form-select bg-dark text-light border-secondary"></select>
                <span asp-validation-for="CountryId" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="PassportNumber" class="form-label text-light">Passport Number</label>
                <input asp-for="PassportNumber" class="form-control bg-dark text-light border-secondary" />
                <span asp-validation-for="PassportNumber" class="text-danger"></span>
            </div>

            <button type="submit" class="btn w-100 login-button">Save Changes</button>
            <div class="mt-3 text-center">
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-light">Back to Home</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
