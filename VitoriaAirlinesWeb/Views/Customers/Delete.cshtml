@model VitoriaAirlinesWeb.Data.Entities.CustomerProfile

@{
    ViewData["Title"] = "Deactivate Customer Account";
}

<div class="main-content">
    <h2 class="text-danger">Deactivate Confirmation</h2>

    <div class="card p-4 bg-dark text-light">
        <h4>Are you sure you want to deactivate this customer profile?</h4>
        <dl class="row">
            <dt class="col-sm-3">Full Name</dt>
            <dd class="col-sm-9">@Model.User.FullName</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.User.Email</dd>

            <dt class="col-sm-3">Nationality</dt>
            <dd class="col-sm-9">@Model.Country?.Name ?? "—"</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Deactivate</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
