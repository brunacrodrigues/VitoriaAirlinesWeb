@model VitoriaAirlinesWeb.Data.Entities.CustomerProfile

@{
    ViewData["Title"] = "Customer Details";
    ViewData["Role"] = "Admin";
}

<div class="main-content">
    <h2>Customer Details</h2>

    <div class="card p-4 bg-dark text-light">
        <dl class="row">
            <dt class="col-sm-3">Full Name</dt>
            <dd class="col-sm-9">@Model.User.FullName</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.User.Email</dd>

            <dt class="col-sm-3">Nationality</dt>
            <dd class="col-sm-9">
                @if (Model.Country != null)
                {
                    <img src="@Model.Country.FlagImageUrl" alt="@Model.Country.CountryCode" width="30" class="me-2" />
                    @Model.Country.Name
                }
                else
                {
                    <span>—</span>
                }
            </dd>

            <dt class="col-sm-3">Passport Number</dt>
            <dd class="col-sm-9">@(Model.PassportNumber ?? "—")</dd>
        </dl>

        <div class="mt-3">
            <a asp-action="Index" class="btn btn-outline-light">Back to List</a>
            <a asp-action="EditCustomerProfile" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
        </div>
    </div>
</div>
