@model VitoriaAirlinesWeb.Models.Employees.EditEmployeeViewModel

@{
    ViewData["Title"] = "Edit Employee";
}

<div class="login-background">
    <div class="login-card" style="max-width: 500px;">
        <h3 class="text-center text-light mb-4">Edit Employee</h3>

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Email" />

            <div asp-validation-summary="ModelOnly" class="login-error-message"></div>

            <div class="mb-3">
                <label asp-for="FirstName" class="form-label text-light"></label>
                <input asp-for="FirstName" class="form-control bg-dark text-light border-secondary" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="LastName" class="form-label text-light"></label>
                <input asp-for="LastName" class="form-control bg-dark text-light border-secondary" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Email" class="form-label text-light"></label>
                <input asp-for="Email" class="form-control bg-dark text-light border-secondary" readonly />
            </div>

            <button type="submit" class="btn w-100 login-button">Save Changes</button>
            <div class="mt-3 text-center">
                <a asp-action="Index" class="btn btn-outline-light">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
