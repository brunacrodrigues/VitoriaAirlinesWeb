@model IEnumerable<VitoriaAirlinesWeb.Data.Entities.User>

@{
    ViewData["Title"] = "Manage Employees";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success fade-out-alert">
        @TempData["SuccessMessage"]
    </div>
}


<div class="main-content">
    <h2>Registered Employees</h2>

    <a asp-action="Register" class="btn btn-gold mb-3">Register New Employee</a>

    <table class="table table-striped table-custom">
        <thead>
            <tr>
                <th></th>
                <th>Full Name</th>
                <th>Email</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>
                        <img src="@employee.ImageFullPath" alt="@employee.FullName" width="60" class="me-2 rounded-circle" />
                    </td>
                    <td>@employee.FullName</td>
                    <td>@employee.Email</td>
                    <td>
                        <a asp-action="Edit" asp-route-email="@employee.Email" class="btn btn-sm btn-outline-warning">Edit</a>
                        <a asp-action="Deactivate" asp-route-email="@employee.Email" class="btn btn-sm btn-outline-danger">Deactivate</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    @{
        <script>
            setTimeout(function () {
                const alerts = document.querySelectorAll('.fade-out-alert');
                alerts.forEach(alert => {
                    alert.style.transition = "opacity 0.5s ease-out";
                    alert.style.opacity = '0';
                    setTimeout(() => alert.remove(), 500);
                });
            }, 4000);
        </script>
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}