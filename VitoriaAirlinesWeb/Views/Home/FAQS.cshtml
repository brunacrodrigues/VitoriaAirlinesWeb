@{
    ViewData["Title"] = "FAQs";
}

<div class="container-fluid py-5" style="background-color: #0e0e0e; min-height: 100vh;">
    <div class="dashboard-card mx-auto" style="max-width: 850px;">
        <h2 class="dashboard-text-maroon text-center mb-4 text-darkt">
            <i class="fas fa-question-circle me-2"></i> Frequently Asked Questions
        </h2>

        <div class="accordion custom-accordion" id="faqAccordion">

            <div class="accordion-item">
                <h2 class="accordion-header" id="headingOne">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne">
                        How do I book a flight?
                    </button>
                </h2>
                <div id="collapseOne" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                    <div class="accordion-body">
                        Go to our homepage, search for available flights, choose your destination and follow the booking steps.
                    </div>
                </div>
            </div>

            <div class="accordion-item">
                <h2 class="accordion-header" id="headingTwo">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo">
                        Can I choose my seat?
                    </button>
                </h2>
                <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                    <div class="accordion-body">
                        Yes. After selecting your flight, you can choose your preferred seat in either executive or economy class.
                    </div>
                </div>
            </div>

            <div class="accordion-item">
                <h2 class="accordion-header" id="headingThree">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree">
                        Do I need to register to book?
                    </button>
                </h2>
                <div id="collapseThree" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                    <div class="accordion-body">
                        No. You can book as a guest. An account is automatically created and linked to your email after purchase.
                    </div>
                </div>
            </div>

            <div class="accordion-item">
                <h2 class="accordion-header" id="headingFour">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFour">
                        What if I lose access to my email?
                    </button>
                </h2>
                <div id="collapseFour" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                    <div class="accordion-body">
                        Please contact our support team to safely update your credentials and regain access to your account.
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
