@model object
@using VitoriaAirlinesWeb.Helpers
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var role = ViewData["Role"] as string;
}

@if (role == UserRoles.Admin)
{
    @await Html.PartialAsync("_AdminDashboard", (VitoriaAirlinesWeb.Models.ViewModels.Dashboard.AdminDashboardViewModel)Model)
}
else if (role == UserRoles.Employee)
{
    @await Html.PartialAsync("_EmployeeDashboard", (VitoriaAirlinesWeb.Models.ViewModels.Dashboard.EmployeeDashboardViewModel)Model)
}
else if (role == UserRoles.Customer)
{
    @await Html.PartialAsync("_CustomerDashboard", (VitoriaAirlinesWeb.Models.ViewModels.Dashboard.CustomerDashboardViewModel)Model)
}

