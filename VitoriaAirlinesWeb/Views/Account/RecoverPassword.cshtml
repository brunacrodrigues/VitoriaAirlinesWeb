@model VitoriaAirlinesWeb.Models.ViewModels.Account.RecoverPasswordViewModel

@{
    Layout = null;
    ViewData["Title"] = "Recover Password";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Recover Password - Vitoria Airlines</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="login-background">
    <div class="login-card">
        <h3 class="login-title text-center mb-1">Forgot your password?</h3>
        <p class="login-subtitle text-center mb-4">Enter your email to receive reset instructions.</p>

        <form method="post">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="login-error-message">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div>@error.ErrorMessage</div>
                    }
                </div>
            }

            <div class="mb-3">
                <label asp-for="Email" class="form-label text-light">Email</label>
                <input asp-for="Email" class="form-control bg-dark text-light border-secondary" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn w-100 mb-3 login-button">Recover Password</button>

            @if (!string.IsNullOrWhiteSpace(ViewBag.Message))
            {
                <div class="text-success text-center">
                    <p>@ViewBag.Message</p>
                </div>
            }
        </form>

        <div class="login-bottom-links mt-3">
            <a asp-action="Login">Back to Login</a>
            <span class="text-muted">or</span>
            <a asp-controller="Home" asp-action="Index">Continue as Guest</a>
        </div>
    </div>

    @await Html.PartialAsync("_ValidationScriptsPartial")
</body>
</html>
