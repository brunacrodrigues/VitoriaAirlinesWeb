@model IEnumerable<VitoriaAirlinesWeb.Data.Entities.Flight>

@{
    ViewData["Title"] = "Scheduled Flights";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success fade-out-alert">
        @TempData["SuccessMessage"]
    </div>
}

<div class="main-content">
    <h2>Scheduled Flights</h2>

    <a asp-action="Create" asp-route-returnUrl="@Url.Action(ViewContext.RouteData.Values["action"]?.ToString(), "Flights")" class="btn btn-gold mb-3">Schedule New Flight</a>

    <table class="table table-striped table-custom">
        <thead>
            <tr>
                <th>Flight Number</th>
                <th>Airplane Model</th>
                <th>Origin Airport</th>
                <th>Destination Airport</th>
                <th>Departure Date</th>
                <th>Arrival Date</th>
                <th>Duration</th>
                <th>Executive Price</th>
                <th>Economy Price</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var flight in Model)
            {
                <tr>
                    <td>@flight.FlightNumber</td>
                    <td>@flight.Airplane.Model</td>

                    <td>
                        <img src="@flight.OriginAirport.Country?.FlagImageUrl"
                             alt="@flight.OriginAirport.Country?.CountryCode"
                             width="30"
                             class="me-2" />
                        @flight.OriginAirport.FullName
                    </td>

                    <td>
                        <img src="@flight.DestinationAirport.Country?.FlagImageUrl"
                             alt="@flight.DestinationAirport.Country?.CountryCode"
                             width="30"
                             class="me-2" />
                        @flight.DestinationAirport.FullName
                    </td>

                    <td>
                        @TimeZoneInfo.ConvertTimeFromUtc(flight.DepartureUtc, TimeZoneInfo.FindSystemTimeZoneById("Europe/Lisbon")).ToString("yyyy-MM-dd HH:mm")
                    </td>
                    <td>
                        @TimeZoneInfo.ConvertTimeFromUtc(flight.ArrivalUtc, TimeZoneInfo.FindSystemTimeZoneById("Europe/Lisbon")).ToString("yyyy-MM-dd HH:mm")
                    </td>
                    <td>@flight.Duration.ToString(@"hh\:mm")</td>
                    <td>@($"{flight.ExecutiveClassPrice:0.00} €")</td>
                    <td>@($"{flight.EconomyClassPrice:0.00} €")</td>

                    <td>
                        <span class="badge bg-primary">@flight.Status</span>
                              
                    </td>

                    <td>
                        <a asp-action="Details"
                           asp-route-id="@flight.Id"
                           asp-route-returnUrl="@Url.Action(ViewContext.RouteData.Values["action"]?.ToString(), "Flights")"
                           class="btn btn-sm btn-outline-info">Details</a>

                        <a asp-action="Edit"
                           asp-route-id="@flight.Id"
                           asp-route-returnUrl="@Url.Action(ViewContext.RouteData.Values["action"]?.ToString(), "Flights")"
                           class="btn btn-sm btn-outline-warning">Edit</a>

                        <a asp-action="Cancel"
                           asp-route-id="@flight.Id"
                           asp-route-returnUrl="@Url.Action(ViewContext.RouteData.Values["action"]?.ToString(), "Flights")"
                           class="btn btn-sm btn-outline-danger">Cancel</a>
                       
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        setTimeout(function () {
            const alerts = document.querySelectorAll('.fade-out-alert');
            alerts.forEach(alert => {
                alert.style.transition = "opacity 0.5s ease-out";
                alert.style.opacity = '0';
                setTimeout(() => alert.remove(), 500);
            });
        }, 4000);
    </script>

    @await Html.PartialAsync("_ValidationScriptsPartial")
}

