@{
    ViewData["Title"] = "Booking Confirmed";
}

<div class="login-background">
    <div class="login-card payment-card">
        <div class="payment-card-header">
            <i class="fas fa-check-circle"></i>
            <h2>Payment Confirmed</h2>
        </div>

        <div class="payment-card-body">
            <p class="lead mb-4">
                Thank you for booking with <strong>Vitoria Airlines</strong>.<br />
                Your ticket has been successfully issued.
            </p>

            <div class="mt-4">
                <a asp-controller="Home" asp-action="Index" class="btn btn-gold w-100">
                    Back to Home
                </a>
            </div>
        </div>
    </div>
</div>
